{
  "model_name": "VAE.pt",
  "training_parameters": {
    "learning_rate": 0.001,
    "batch_size": 32,
    "epochs": 1000,
    "optimizer": "Adam",
    "loss_function": "CrossEntropyLoss",
    "early_stopping": true
  },
  "paths": {
    "root_dir": "myfolder/",
    "data_dir": "myfolder/data/",
