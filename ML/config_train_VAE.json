    "latent_dim": 16,
    "latent_channel": 16,
    "dropout_rate": 0.1
  },
  "dataset": {
    "validation_split": 0.1,
    "test_split": 0.1,
    "plot_examples": false,
    "random_state": 25
  },
  "device": "cuda",
  "checkpointing": {
    "save_checkpoints": true,
    "checkpoint_interval": 100,
    "checkpoint_dir": "myfolder/models/"
  }
